<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students</title>
  </head>
  <body>

    <% include ../partials/nav.ejs%>
    <h1>STUDENTS</h1>
    <a href="students/addStudent">ADD NEW STUDENT</a>
    <table>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Full Name</th>
      <th>Email</th>
    </tr>
    <%dataStudents.forEach (row=> {%>
    <tr>
      <td><%= row.id%></td>
      <td><%=row.first_name%></td>
      <td><%=row.last_name%></td>
      <td><%=row.getFullName()%></td>
      <td><%=row.email%></td>

      <td>

        <a href="students/edit/<%=row.id%>">EDIT</a>
        <a href="students/delete/<%=row.id%>">DELETE</a>
      </td>
      </tr>
      <%})%>
    </table>
  </body>
</html>
