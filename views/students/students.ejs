<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students</title>
  </head>
  <body>
    <style>
    ul {list-style-type: none; margin: 0; padding: 0; overflow: hidden; background-color: #333;} li {float: left;}
    li a {display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;}
    /* Change the link color to #111 (black) on hover */
    li a:hover {background-color: #111;}th { padding-right: 30px;}

    </style>
    <% include ../partials/nav.ejs%>
    <h1>STUDENTS</h1>
    <a href="students/addStudent">ADD NEW STUDENT</a>
    <table>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Full Name</th>
      <th>Email</th>
    </tr>
    <%dataStudents.forEach (row=> {%>
    <tr>
      <td><%= row.id%></td>
      <td><%=row.first_name%></td>
      <td><%=row.last_name%></td>
      <td><%=row.getFullName()%></td>
      <td><%=row.email%></td>

      <td>

        <a href="students/edit/<%=row.id%>">EDIT</a>
        <a href="students/delete/<%=row.id%>">DELETE</a>
      </td>
      </tr>
      <%})%>
    </table>
  </body>
</html>
