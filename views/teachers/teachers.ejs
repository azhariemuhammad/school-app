<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teacher</title>
  </head>
  <body>
      <% include ../partials/nav.ejs%>
    <table>
  <h1>Halaman Teachers</h1>
  <a href="teachers/addTeacher">ADD NEW TEACHERS</a>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject Name</th>
      <th>Options</th>
    </tr>
    <%dataTeachers.forEach (row=> {%>
    <tr>
      <td><%= row.id%></td>
      <td><%=row.first_name%></td>
      <td><%=row.last_name%></td>
      <td><%=row.email%></td>
      <td><%if(row.subject){%>
      <%=row.subject.subject_name%>
      <%}else{%>
        unassigned
        <%}%></td>

      <td>
        <a href="teachers/edit/<%=row.id%>">EDIT</a>
        <a href="teachers/delete/<%=row.id%>">DELETE</a>
      </td>
      <%})%>
      </tr>
    </table>
  </body>
</html>
